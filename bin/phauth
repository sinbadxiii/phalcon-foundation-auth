#!/usr/bin/env php
<?php

foreach ([__DIR__ . '/../../../autoload.php', __DIR__ . '/../vendor/autoload.php'] as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}

list($operations, $attributes) = parseArgs($argv);

if (empty($operations)) {
    showHelp("Must specify at least one file.");
}
